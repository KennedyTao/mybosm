<!--pages/useBike/countingTime/countingTime.wxml-->
<view class="page">
    <view class="weui-msg__text-area">
        <text>当前单车编号: {{bno}}</text>
    </view>
    <view class="weui-msg__text-area time">
        <view class="time-title">
            <text>{{billing}}</text>
        </view>
        <view class="time-content">
            <text>{{hours}}:{{minutes}}:{{seconds}}</text>
        </view>
    </view>

    <view class="weui-msg__opr-area">
      <view class="weui-btn-area">
        <button class='weui-btn' type="warn" disabled="{{disabled}}" bindtap="endRide">结束骑行</button>
        <button class="weui-btn" type="primary" bindtap="moveToIndex">回到地图</button>
      </view>
    </view>
</view>
