        <view class="page__title">Welcome,{{userInfo.nickName}}</view>
        <view class="page__desc">个人页面</view>
    </view>
    <view class="page__bd">
        <view class="weui-grids">
            <!-- <block wx:for="{{grids}}" wx:key="*this"> -->
